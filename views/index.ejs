<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Test</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">

<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h2 class="text-center mb-4 mt-4">User Table</h2>
                <a href="/users/new" class="mb-4 btn btn-success">
                    <span>New User</span>
                </a>
              
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>Firstname</th>
                            <th>Lastname</th>
                            <th>Email</th>
                            <th>Password</th>
<!--                             <th>Occupation</th> -->
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for( let i = 0; i < userData.length; i++ ) { %>
                            <tr">
                                <td class="align-middle"><%= userData[i].firstName %></td>
                                <td class="align-middle"><%= userData[i].lastName %></td>
                                <td class="align-middle"><%= userData[i].email %></td>
                                <td class="align-middle"><%= userData[i].password %></td>
                                <!-- <td class="align-middle"><%= userData[i].occupation %></td> -->
                                <td class="align-middle text-center">
                                    <a href="/users/edit/<%= userData[i].id%>" class="btn btn-info">Edit</a>
                                    <form action="/users/<%= userData[i].id%>?_method=Delete" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</body>

</html>